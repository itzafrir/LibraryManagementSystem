<Window x:Class="LibraryManagementSystem.Views.ItemTypeSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Item Type" Height="200" Width="300">
    <StackPanel Margin="20">
        <TextBlock Text="Select the type of item you want to add:" Margin="0,0,0,10" FontWeight="Bold" />
        <ComboBox x:Name="ItemTypeComboBox" Width="200" />
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="OK" Width="80" Margin="5" Click="OkButton_Click"/>
            <Button Content="Cancel" Width="80" Margin="5" Click="CancelButton_Click"/>
        </StackPanel>
    </StackPanel>
</Window>